    <section id="productsSection">
        <div class="container">
            <h2 class="productsSectionHeading"><%= another_user.name %>ning e'lonlari </h2>
            <div class="productsList">

                <% for (let ad of user_ads) {%>
                <div class="productItem">
                    <div class="productImgDiv">
                        <a href="/ads/<%= ad.slug %> ">
                            <img src="/uploads/<%= ad.photos[0] %> " class="productImg"></img>
                        </a>
                    </div>
                    <div class="productInfo">
                        <div class="productNameDiv">
                            <a href="/ads/<%= ad.slug %> ">
                                <span class="productName"><%= ad.title %> </span>
                                <div class="productNameUnderline"></div>
                            </a>
                        </div>
                        <div class="locationAndTime">
                            <span class="productLocation"><%= ad.location %> </span>
                            <div class="d-block">
                                <span class="productLocation"><%= ad.addedDate %> </span>
                                <span class="productLocation"><%= ad.addedTime %> </span>
                            </div>
                        </div>
                        <div class="productPriceDiv">
                            <span class="productPrice"><%= ad.price %> <%= ad.currensy %> </span>
                        </div>
                        <div class="likeButtonDiv">
                            <button class="likeButton">
                                <i class="like far fa-heart"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <% } %>

            </div>
        </div>
    </section>


